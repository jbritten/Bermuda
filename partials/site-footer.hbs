<footer id="footer" class="text-gray-600 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
        <div class="flex justify-between items-center py-6 md:justify-start md:space-x-10">
            <section class="flex-1">
                &copy; {{date format="YYYY"}}
                <a href="{{@site.url}}">{{@site.title}}</a>
            </section>
            <nav class="flex">
                {{#if @site.facebook}}<a href="{{facebook_url @site.facebook}}" target="_blank" rel="noopener" class="ml-2"><i class="fab fa-facebook-square fa-2x" aria-hidden="true"></i><span class="sr-only">Facebook</span></a>{{/if}}
                {{#if @site.twitter}}<a href="{{twitter_url @site.twitter}}" target="_blank" rel="noopener" class="ml-2"><i class="fab fa-twitter-square fa-2x" aria-hidden="true"></i><span class="sr-only">Twitter</span></a>{{/if}}
            </nav>
        </div>
    </div>
</footer>
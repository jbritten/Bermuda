<article class="{{post_class}} max-w-sm rounded overflow-hidden shadow-lg">
    {{#if feature_image}}
    <a class="post-card-image-link" href="{{url}}">
        {{!-- This is a responsive image, it loads different sizes depending on device
                    https://medium.freecodecamp.org/a-guide-to-responsive-images-with-ready-to-use-templates-c400bd65c433 --}}
        <img class="w-full" srcset="{{img_url feature_image size="s"}} 300w,
                                {{img_url feature_image size="m"}} 600w,
                                {{img_url feature_image size="l"}} 1000w,
                                {{img_url feature_image size="xl"}} 2000w" sizes="(max-width: 1000px) 400px, 700px"
            loading="lazy" src="{{img_url feature_image size="m"}}" alt="{{title}}" />
    </a>
    {{/if}}
    <div class="px-6 py-4">
        <div class="font-bold text-xl mb-2">{{title}}</div>
        <p class="text-gray-700 text-base">
            {{#if feature_image}}
            {{excerpt words="30"}}
            {{else}}
            {{excerpt words="44"}}
            {{/if}}
        </p>
    </div>
    <div class="px-6 py-4">
        {{#if tags}}
            {{#foreach tags}}
                <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2">
                    <a href="{{url}}" class="hover:underline">{{name}}</a>
                </span>
            {{/foreach}}
        {{/if}}
    </div>
    <div class="px-6 py-4">
        <div class="flex items-center">
            {{#primary_author}}
                {{#if profile_image}}
                <a href="{{url}}">
                    <img class="w-10 h-10 rounded-full" src="{{img_url profile_image size="xs"}}" alt="{{name}}" />
                </a>
                {{else}}
                <a href="{{url}}" class="h-10 w-10 rounded-full"><i class="fas fa-user-circle fa-2x"></i></a>
                {{/if}}
            {{/primary_author}}
            <div class="ml-4">
                {{#primary_author}}
                <p class="text-gray-900 leading-none">
                    <a href="{{url}}" class="hover:underline">{{name}}</a>
                </p>
                {{/primary_author}}
                <p class="text-sm text-gray-600">
                    <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="D MMM YYYY"}}</time>
                    <span class="mx-1">&middot;</span>
                    <span>{{reading_time}}</span>
                </p>                
            </div>
        </div>
    </div>
</article>